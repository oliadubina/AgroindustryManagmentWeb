@using AgroindustryManagementWeb.Models
@model IEnumerable<Machine>

@{
    ViewData["Title"] = "Управління Машинами";
}

<h1>🚜 Управління Машинами</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Створити нову машину</a>
</p>

@* Відображення повідомлень про помилки або успіх із TempData *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Помилка:</strong> @TempData["ErrorMessage"]
    </div>
}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Тип
            </th>
            <th>
                Споживання палива
            </th>
            <th>
                Чи вільна?
            </th>
            <th>
                Тривалість роботи/гектар
            </th>
            <th>
                Поле
            </th>
            <th>
                Ресурс
            </th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelConsumption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkDuralityPerHectare)
                </td>
                
                <td>
                    @if (item.Field != null)
                    {

                        @Html.Raw($"ID: {item.Field.Id} ({item.Field.Area} га)")
                    }
                    else
                    {
                        @item.FieldId.ToString()
                    }
                </td>
                <td>
                    @if (item.Resource != null)
                    {

                        @Html.Raw($"ID: {item.Resource.Id} ({item.Resource.CultureType} )")
                    }
                    else
                    {
                        @item.FieldId.ToString()
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Редагувати</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">🔍 Деталі</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Наразі немає зареєстрованих машин.
    </div>
}

