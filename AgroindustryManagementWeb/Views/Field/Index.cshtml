@using AgroindustryManagementWeb.Models
@model IEnumerable<Field>

@{
    ViewData["Title"] = "Управління Полями";
}

<h1>🚜 Управління Полями</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Створити нове Поле</a>
</p>

@* Відображення повідомлень про помилки або успіх із TempData *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Помилка:</strong> @TempData["ErrorMessage"]
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Площа
            </th>
            <th>
                Тип культури
            </th>
            <th>
                Статус
            </th>
            <th>
                Працівники
            </th>
            <th>
                Техніка
            </th>
            <th>
                Завдання
            </th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area) **га**
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Culture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    **@item.Workers.Count()** осіб
                </td>
                <td>
                    **@item.Machines.Count()** одиниць
                </td>
                <td>
                    **@item.Tasks.Count()** шт.
                </td>
                <td>
                    <a asp-action="Edit" asp-route-fieldId="@item.Id" class="btn btn-sm btn-warning">✏️ Редагувати</a>
                    <a asp-action="Details" asp-route-fieldId="@item.Id" class="btn btn-sm btn-info">🔍 Деталі</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Наразі немає зареєстрованих полів.
    </div>
}

