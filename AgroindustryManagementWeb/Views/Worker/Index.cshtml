@using AgroindustryManagementWeb.Models
@model IEnumerable<Worker>

@{
    ViewData["Title"] = "Управління Працівниками";
}

<h1>🚜 Управління Працівниками</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Додати працівника</a>
</p>

@* Відображення повідомлень про помилки або успіх із TempData *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Помилка:</strong> @TempData["ErrorMessage"]
    </div>
}
  
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Ім'я
            </th>
            <th>
                Прізвище
            </th>
            <th>
                Вік
            </th>
            <th>
               Ставка за годину
            </th>
            <th>
                Є вільний
            </th>
            <th>
                Завдання
            </th>
            <th>
                 Відпрацьовані години
            </th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) **га**
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    **@item.Tasks.Count()** шт.
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.HoursWorked)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-workerId="@item.Id" class="btn btn-sm btn-warning">✏️ Редагувати</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">🔍 Деталі</a>
                    <a asp-action="Delete" asp-route-workerId="@item.Id" class="btn btn-sm btn-danger">🗑️ Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Наразі немає зареєстрованих працівників.
    </div>
}

