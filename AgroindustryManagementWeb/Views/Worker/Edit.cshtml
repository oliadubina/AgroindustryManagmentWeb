@using AgroindustryManagementWeb.Models
@model Worker

@{
    ViewData["Title"] = "Редагувати  Працівника";
    
    var availableTasks = ViewBag.AvailableTasks as List<WorkerTask> ?? new List<WorkerTask>();

    // Створюємо множини (Set) для швидкої перевірки, чи об'єкт вже призначений
    
    var currentTaskIds = new HashSet<int>(Model.Tasks.Select(t => t.Id));
}

<h1>Редагувати Працівника - ID: @Model.Id</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            @* 1. Основні властивості *@

            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label">Ім'я</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label">Прізвище</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Age" class="control-label">Вік</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="HourlyRate" class="control-label">Ставка за годину</label>
                <input asp-for="HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IsActive" class="control-label">Є вільний</label>
                <input asp-for="IsActive" class="form-check-input" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="HoursWorked" class="control-label">Відпрацьовані години</label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            @* 2. Вибір пов'язаних сутностей *@
            <div class="form-group mb-5">
                <label class="control-label">Призначити Завдання</label>
                <select name="SelectedTaskIds" multiple class="form-control">
                    @foreach (var task in availableTasks)
                    {
                        <option value="@task.Id">@task.Id - @(task.Description ?? "Невідоме завдання")</option>
                    }
                </select>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Зберегти Зміни" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Повернутися до Списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}